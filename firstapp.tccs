Screen {
    layout: grid;
    grid-size: 2;
    grid-gutter: 2;
    padding: 2;
}

Header {
  dock: top;
  height: 3;
  content-align: center middle;
}

Footer {
  dock: bottom;
  height: 1;
  content-align: center middle;
}

#question {
    width: 100%;
    height: 100%;
    column-span: 2;
    content-align: center bottom;
    text-style: bold;
}

Button {
    width: 100%;
}